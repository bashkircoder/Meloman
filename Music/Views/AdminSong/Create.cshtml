@model Music.ViewModels.AdminSongViewModel

<div class="row d-flex flex-column min-vh-100">
    <div class="col-md-4">
        <form asp-controller="AdminSong" asp-action="Load"  method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.AlbumId"/>
            </div>
            <div class="form-group py-3">
                <p>Введите название песни</p>
                <input asp-for="@Model.Song.Name" class="form-control"/>
                <span asp-validation-for="@Model.Song.Name" class="text-danger"></span>
            </div>
                <div class="mb-3 py-2">
                    <label for="img" class="form-label">Загрузите аудиофайл</label>
                    <input asp-for="@Model.File" class="form-control" id="img" accept="audio/*">
                </div>

            <div class="form-group">
                <input type="submit" value="Создать"/>
            </div>
        </form>
    </div>
</div>