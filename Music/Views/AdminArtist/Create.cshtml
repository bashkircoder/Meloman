@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Music.ViewModels.AdminArtistCreateViewModel

<div class="row d-flex flex-column min-vh-100">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group py-2">
                <p>Введите название исполнителя</p>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 py-2">
                <label asp-for="File" class="form-label">Загрузить обложку артиста</label>
                <input asp-for="File" class="form-control" placeholder="https://example.com/image.jpg" />
            </div>
            <div class="form-group">
                <input type="submit" value="Создать"/>
            </div>
        </form>
    </div>
</div>